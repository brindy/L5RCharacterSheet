<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 title="Techniques (non-Shugenja)" width="100%">

	<mx:Form width="100%">
		
		<mx:FormItem width="100%" label="School">
			<s:HGroup width="100%">
				<s:TextInput width="100%" />
				<mx:Image source="@Embed('/assets/icons/delete.png')" buttonMode="true" toolTip="Delete this technique" />
				<mx:Image source="@Embed('/assets/icons/add.png')" horizontalAlign="right" buttonMode="true" toolTip="Add new technique" />
			</s:HGroup>
		</mx:FormItem>
		
		<mx:FormItem width="100%">
			<mx:HRule width="100%" height="1"/>
		</mx:FormItem>
		
		<mx:FormItem label="Rank 1" width="100%">
			<s:HGroup width="100%">
				<s:TextInput width="100%" />
				<s:CheckBox toolTip="Learned?" />
			</s:HGroup>
		</mx:FormItem>

		<mx:FormItem label="Effect" width="100%">
			<s:TextArea width="100%" height="50" />
		</mx:FormItem>

		<mx:FormItem width="100%">
			<mx:Image source="@Embed('/assets/icons/add.png')" horizontalAlign="right" buttonMode="true" toolTip="Add rank" />
		</mx:FormItem>
		
	</mx:Form>
	
</s:Panel>
