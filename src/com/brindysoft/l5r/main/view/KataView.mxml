<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 title="Kata" width="100%">

	<mx:Form width="100%">
		
		<mx:FormItem width="100%" label="Name">
			<s:HGroup width="100%">
				<s:TextInput width="100%" />
				<mx:Image source="@Embed('/assets/icons/delete.png')" buttonMode="true" />				
			</s:HGroup>
		</mx:FormItem>

		<mx:FormItem label="Ring/Mastery" width="100%">
			<s:HGroup width="100%" verticalAlign="middle">
				<s:TextInput width="100%" />
				<s:Label text="Duration" />
				<s:TextInput width="100%" />
			</s:HGroup>
		</mx:FormItem>

		<mx:FormItem width="100%" label="Effect">
			<s:TextArea width="100%" height="50" />
		</mx:FormItem>

		<mx:FormItem width="100%">
			<mx:Image source="@Embed('/assets/icons/add.png')" horizontalAlign="right" buttonMode="true" />
		</mx:FormItem>
		
	</mx:Form>
	
	
</s:Panel>
